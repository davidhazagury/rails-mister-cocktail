

<div class="card-product">
  <img src="https://source.unsplash.com/random" alt="product"/>
  <div class="card-product-infos">
    <h2><%= @cocktail.name.capitalize %></h2>
    <ul style ="list-style: none">
      <% @cocktail.doses.each do |dose|%>
        <li>
        ✔︎ <%= dose.description + " :  " + dose.ingredient.name.capitalize %>
          <%= link_to  dose_path(dose), method: :delete, data: {confirm: "Are you sure?"}  do%>
              <i class="far fa-trash-alt"></i>
            <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<%= link_to "+", new_cocktail_dose_path(@cocktail), class: "btn-addition" %>
<%= link_to  root_path, class:"btn-back" do%>
<i class="fas fa-cocktail"></i>
<% end %>
