<div class="banner">
  <h1>
    Welcome to Mr. Cocktail
  </h1>
  <div class="punchline">
    <p>Imagine</p>
    <p>Create</p>
    <p>Drink</p>
  </div>
</div>
<div class="cocktail-list">
  <ul style="list-style: none">
  <% @cocktails.each do |cocktail| %>
  <li>
    🍹<%= link_to cocktail.name.capitalize, cocktail_path(cocktail.id) %>
  </li>
  <% end %>
</ul>

<%= link_to "Create a new cocktail", new_cocktail_path %>

</div>
